<% title "Components" %>

<table>
  <tr>
    <th>Recipe</th>
    <th>Ingredient</th>
    <th>Amount</th>
  </tr>
  <% for component in @components %>
    <tr>
      <td><%= component.recipe_id %></td>
      <td><%= component.ingredient_id %></td>
      <td><%= component.amount %></td>
      <td><%= link_to "Show", component %></td>
      <td><%= link_to "Edit", edit_component_path(component) %></td>
      <td><%= link_to "Destroy", component, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Component", new_component_path %></p>
